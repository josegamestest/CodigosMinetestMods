minetest.register_on_dignode(function(pos, oldnode, digger)
    if oldnode.name == "mymod:special_node" then
        -- Verifique se o jogador tem a ferramenta adequada para quebrar o n처
        local player = minetest.get_player_by_name(digger:get_player_name())
        local wielded_item = player:get_wielded_item():get_name()
        if wielded_item ~= "mymod:special_tool" then
            -- O jogador n찾o tem a ferramenta adequada, ent찾o cancele a quebra do n처
            return true
        end
    end
end)
